// BookSim2 Configuration for 8x8 Mesh with Natural Traffic Patterns
// NO manual hotspot forcing - natural congestion detection

// Topology
topology = mesh;
k = 8;
n = 2;

// Routing
routing_function = dor;

// Flow control
num_vcs     = 8;
vc_buf_size = 8;
wait_for_tail_credit = 1;

// Router architecture
vc_allocator = islip;
sw_allocator = islip;
alloc_iters  = 1;

credit_delay   = 2;
routing_delay  = 0;
vc_alloc_delay = 1;
sw_alloc_delay = 1;

input_speedup     = 2;
output_speedup    = 1;
internal_speedup  = 1.0;

// Traffic - Natural Patterns Only
// Will be dynamically set to: uniform, transpose, shuffle, tornado, neighbor, bitcomp
traffic = bitcomp;
packet_size = 20;

// Simulation
sim_type = latency;
injection_rate = 0.020112;
sample_period = 1000;
max_samples = 10;
warmup_periods = 3;
